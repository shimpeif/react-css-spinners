{
    "env": {
        "browser": true,
        "es2021": true,
        "node": true  // enables process.env in src/index.js
    },
    "extends": [
        "eslint:recommended",
        "plugin:react/recommended",
        //"prettier"
        "eslint-config-prettier"
    ],
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 13,
        "sourceType": "module"
    },
    "plugins": [
        "react",
        "prettier"
    ],
    "rules": {
      "prettier/prettier": 2,
      "no-unused-vars": "off"
    },
    "settings": {
      "react": {
        "version": "detect"
      }
    }
}
