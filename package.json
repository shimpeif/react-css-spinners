{
  "name": "react-css-spinners",
  "version": "1.0.0",
  "description": "css only spinners for React ",
  "main": "dist/bundle.cjs.js",
  "module": "dist/bundle.esm.js",
  "sideEffects": false,
  "scripts": {
    "prebuild": "rimraf dist",
    "build": " rollup -c",
    "lint": "eslint . --ext .js",
    "lint:fix": "eslint . --ext .js --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:coveralls": "jest --coverage --coverageReporters=text-lcov | coveralls",
    "test:staged": "jest --findRelatedTests",
    "prettier-format": "prettier --config .prettierrc 'src/**/*.js' --write",
    "prettier-watch": "onchange 'src/**/*.js' -- prettier --write {{changed}}",
    "prepare": "husky install",
    "storybook": "export SET NODE_OPTIONS=--openssl-legacy-provider && start-storybook -p 6006 -c storybook",
    "build-storybook": "export SET NODE_OPTIONS=--openssl-legacy-provider && build-storybook -c storybook"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/shimpeif/react-css-spinners.git"
  },
  "keywords": [
    "react",
    "css",
    "spinners"
  ],
  "author": "George Orwell",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/shimpeif/react-css-spinners/issues"
  },
  "homepage": "https://github.com/shimpeif/react-css-spinners#readme",
  "devDependencies": {
    "@babel/core": "^7.16.0",
    "@babel/preset-env": "^7.16.4",
    "@babel/preset-react": "^7.16.0",
    "@rollup/plugin-babel": "^5.3.0",
    "@rollup/plugin-node-resolve": "^13.0.6",
    "@storybook/addon-actions": "^6.4.9",
    "@storybook/addon-essentials": "^6.4.9",
    "@storybook/addon-links": "^6.4.9",
    "@storybook/addons": "^6.4.9",
    "@storybook/react": "^6.4.9",
    "@storybook/theming": "^6.4.9",
    "babel-core": "^7.0.0-bridge.0",
    "babel-jest": "^27.4.5",
    "babel-loader": "^8.2.3",
    "coveralls": "^3.1.1",
    "eslint": "^8.4.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-jest": "^25.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-react": "^7.27.1",
    "husky": "^7.0.0",
    "jest": "^27.4.5",
    "lint-staged": "^12.1.2",
    "onchange": "^7.1.0",
    "prettier": "^2.5.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-test-renderer": "^17.0.2",
    "rimraf": "^3.0.2",
    "rollup": "^2.60.2",
    "rollup-plugin-string": "^3.0.0",
    "rollup-plugin-terser": "^7.0.2"
  },
  "peerDependencies": {
    "react": ">=15"
  },
  "engines": {
    "node": ">=10"
  },
  "jest": {
    "moduleNameMapper": {
      "\\.css$": "<rootDir>/mocks/styles.js"
    }
  }
}
