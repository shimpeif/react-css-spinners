{
  "name": "react-css-spinners",
  "version": "1.0.0",
  "description": "css only spinners for React ",
  "main": "index.js",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": " rollup -c",
    "test": "echo \"Error: no test specified\" && exit 1",
    "lint": "eslint . --ext .js",
    "lint:fix": "eslint . --ext .js --fix",
    "prettier-format": "prettier --config .prettierrc 'src/**/*.js' --write",
    "prettier-watch": "onchange 'src/**/*.js' -- prettier --write {{changed}}",
    "prepare": "husky install"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/shimpeif/react-css-spinners.git"
  },
  "keywords": [
    "react",
    "css",
    "spinners"
  ],
  "author": "George Orwell",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/shimpeif/react-css-spinners/issues"
  },
  "homepage": "https://github.com/shimpeif/react-css-spinners#readme",
  "devDependencies": {
    "@babel/core": "^7.16.0",
    "@babel/preset-env": "^7.16.4",
    "@babel/preset-react": "^7.16.0",
    "@rollup/plugin-babel": "^5.3.0",
    "@rollup/plugin-node-resolve": "^13.0.6",
    "eslint": "^8.4.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-react": "^7.27.1",
    "husky": "^7.0.0",
    "lint-staged": "^12.1.2",
    "onchange": "^7.1.0",
    "prettier": "^2.5.1",
    "rimraf": "^3.0.2",
    "rollup": "^2.60.2",
    "rollup-plugin-terser": "^7.0.2"
  }
}
